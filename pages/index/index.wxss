/**index.wxss**/
image {
  width: 100%;
}
.slide-image {
  height: 380rpx;
}
.service-box {
  padding: 20rpx 30rpx 20rpx 30rpx;
  background: #fff;
  display: -webkit-box;
}
.service-link {
  width: 100%;
  margin: 0 15rpx;
  -webkit-box-flex: 1.0;
          box-flex: 1.0;
}
.service-img {
  width: 100%;
  height: 129rpx;
}
.classify-box {
  padding-left: 28rpx;
  margin-bottom: 20rpx;
  background: #fff;
}
.classify-title-box {
  padding: 15rpx 0;
  border-bottom: 1px solid #f0f0f0;
}
.classify-title {
  padding: 0 20rpx;
  line-height: 1;
  border-left: 8rpx solid #66d3fc;
  color: #333;
  font-size: 32rpx;
}

/* 粥类 */
.scroll-view {
  white-space: nowrap;
}
.scroll-view-item {
  display: inline-block;
  width: 380rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}
.scroll-view-item-img {
  width: 380rpx;
  height: 160rpx;
  display: block;
  border-radius: 10rpx;
}
.scroll-view-item-info {
  margin: 10rpx 0;
  font-size: 24rpx;
  color: #333;
  position: relative;
  line-height: 1;
}
.scroll-view-item-num {
  position: absolute;
  right: 0;
  top: 0;
  color: #888;
  font-size: 22rpx;
}
.scroll-view-item-price {
  display: block;
  color: #66d3fc;
  font-size: 22rpx;
  margin-bottom: 10rpx;
  line-height: 1;
}