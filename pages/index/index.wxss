/**index.wxss**/
image {
  width: 100%;
}
.service-box {
  padding: 10px 15.5px 7px 15.5px;
  background: #fff;
  display: -webkit-box;
}
.service-link {
  width: 100%;
  margin: 0 7.5px;
  -webkit-box-flex: 1.0;
          box-flex: 1.0;
}
.service-img {
  width: 100%;
  height: 65px;
}
.classify-box {
  padding-left: 13px;
  margin-bottom: 10px;
  background: #fff;
}
.classify-title-box {
  padding: 7px 0;
  border-bottom: 1px solid #f0f0f0;
}
.classify-title {
  padding: 0 10px;
  line-height: 1;
  border-left: 4px solid #66d3fc;
  color: #333;
  font-size: 14px;
}

/* 粥类 */
.scroll-view {
  white-space: nowrap;
}
.scroll-view-item {
  display: inline-block;
  width: 190px;
  margin-top: 10px;
  margin-right: 10px;
}
.scroll-view-item-img {
  width: 190px;
  height: 80px;
  display: block;
  border-radius: 5px;
}
.scroll-view-item-info {
  margin: 5px 0;
  font-size: 12px;
  color: #333;
  position: relative;
}
.scroll-view-item-num {
  position: absolute;
  right: 0;
  top: 0;
  color: #888;
  font-size: 10px;
}
.scroll-view-item-price {
  display: block;
  color: #66d3fc;
  font-size: 10px;
  margin-bottom: 5px;
}