.order-header{
  width:100%;
  height: 80rpx;
  background-color: #ffffff;
}

.order-header-item{
  width: 50%;
  height: 80prx;
  line-height: 80rpx;
  display: inline-block;
  text-align: center;
  color: #333333;
  font-size: 30rpx;
}
.order-header-item.active{
  color: #08a1f9;
  border-bottom: 2rpx solid #08a1f9;
}

.order-list{
  margin-top:20rpx;
  width: 100%;
}

.order-list-my{
  display: block;
}
.order-item-my{
  margin-bottom: 20rpx;
  padding: 20rpx 28rpx;
  background: #fff;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  display: -webkit-box;
}

.order-item-my-lf {
  width: 150rpx;
  height: 150rpx;
  margin-right: 40rpx;
  overflow: hidden;
  background: #000;
}
.order-item-my-lf-img {
  width: 150rpx;
  height: 150rpx;
}
.order-item-my-rt {
  position: relative;
  -webkit-box-flex: 1.0;
          box-flex: 1.0;
}
.shop-item-title {
  line-height: 1;
  color: #333;
  font-size: 28rpx;
  margin-bottom: 40rpx;
  display: block;
}
.shop-address-box {
  padding-bottom: 10rpx;
  border-bottom: 1px solid #d5d5d5;
  font-size: 24rpx;
  color: #888;
  position: relative;
}
.shop-address-icon {
  width: 17rpx;
  height: 20rpx;
  margin-right: 10rpx;
  display: inline-block;
  vertical-align: middle;
  background: url(../../../images/address_icon1.png) no-repeat;
  background-size: 100%;
}
.shop-address {
  width: 400rpx;
  display: inline-block;
  vertical-align: middle;
}
.order-item-my-yy-wait {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  width: 90rpx;
  height: 28rpx;
  line-height: 28rpx;
  display: inline-block;
  vertical-align: middle;
  text-align: center;
  font-size: 18rpx;
  color: #379aff;
}
.order-item-my-yy-wait.wait{
  background: url(../../../images/order/wait.png) no-repeat;
  background-size: 100%;
  color: #fff;
}
.order-item-my-yy-box {
  padding-top: 10rpx;
}
.order-item-my-yy-icon {
  width: 48rpx;
  height: 22rpx;
  margin-right: 10rpx;
  display: inline-block;
  vertical-align: middle;
  text-align: center;
  color: #fff;
  font-size: 18rpx;
  background: url(../../../images/order/yy_icon.png) no-repeat;
  background-size: 100%;
}
.order-item-my-yy-span{
  font-size: 22rpx;
  color: #888;
  margin-right: 10rpx;
}

.order-item-sy{
  margin-bottom: 20rpx;
  padding: 20rpx 28rpx;
  background: #fff;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  display: -webkit-box;
}

.order-item-sy-lf {
  width: 130rpx;
  height: 130rpx;
  margin-right: 40rpx;
  overflow: hidden;
  background: #000;
}
.order-item-sy-lf-img {
  width: 130rpx;
  height: 130rpx;
}
.order-item-sy-rt {
  position: relative;
  -webkit-box-flex: 1.0;
          box-flex: 1.0;
}
.order-item-sy-name {
  line-height: 1;
  color: #333;
  font-size: 30rpx;
  display: block;
}

.order-item-sy-arrow {
  width:11rpx;
  height:20rpx;
  background:url(../../../images/order/sy_icon1.png) no-repeat;
  background-size:100%;
  position:absolute;
  top:5rpx;
  left:112rpx;
}
.order-item-sy-time,.order-item-sy-detail,.order-item-sy-money{
  display: block;
}
.order-item-sy-time,.order-item-sy-detail{
  font-size: 20rpx;
  color: #888;
}
.order-item-sy-detail{
  margin-top:50rpx;
}
.order-item-sy-money{
  font-size: 24rpx;
  color: #333;
  margin-top:15rpx;
}
.order-item-sy-status{
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  display: inline-block;
  vertical-align: middle;
  font-size: 20rpx;
  color: #000;
}
.order-item-sy-pay{
  width:114rpx;
  height:35rpx;
  line-height: 35rpx;
  background: url(../../../images/order/sy_icon3.png) no-repeat;
  background-size: 100%;
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
  display: inline-block;
  vertical-align: middle;
  text-align: center;
  font-size: 20rpx;
  color: #379aff;
}
.order-item-sy-pay.pay{
  background: url(../../../images/order/sy_icon2.png) no-repeat;
  background-size: 100%;
  font-size: 24rpx;
  color: #fff;
}