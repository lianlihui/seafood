.address{
  width:100%;
  height: 100%;
  background-color: #fff;
}
.address-list{
  width:100%;
  background-color: #fff;
  margin-top: 20rpx;
}
.address-title{
  width: 100%;
  height: 76rpx;
  line-height: 76rpx;
  background-color: #fff;
  font-size: 28rpx;
  display:inline-block;
  vertical-align:middle;
  padding-left: 28rpx;
  -webkit-box-sizing:border-box;
  box-sizing:border-box;
  border-bottom: 1px solid #cccccc;
}

.address-item{
  padding: 20rpx 92rpx;
  width:100%;
  -webkit-box-sizing:border-box;
  box-sizing:border-box;
  border-bottom: 1px solid #cccccc;
  position: relative;
}
.address-item-icon{
  width: 92rpx;
  height: 110rpx;
  background: url(../../../images/address/sel_icon1.png) no-repeat center center;
  background-size: 30rpx;
  position: absolute;
  top: 50%;
  margin-top: -55rpx;
  left: 0;
}
.address-item-icon.active {
  background: url(../../../images/address/sel_icon2.png) no-repeat center center;
  background-size: 30rpx;
}
.address-item-content{
  padding:27rpx 0;
  -webkit-box-sizing:border-box;
  box-sizing:border-box;
  font-size: 28rpx;
}
.address-item-content-contact{
  color: #333333;
}
.address-item-content-contact .name{
  display: inline-block;
  margin-right: 20rpx;
}
.address-item-content-address{
  margin-top:20rpx;
  font-size: 24rpx;
  width:515rpx;
}
.address-item-content-address .defaut{
  display: inline-block;
  margin-right: 15rpx;
  color: #19b5ff;
}
.address-item-content-address .adrss{
  color: #888888;
}
.address-item-eidt{
  width:92rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #08a1f9;
  text-align: center;
  margin-left: 37rpx;
  position: absolute;
  top: 50%;
  margin-top: -35rpx;
  right: 0;
  border-left: 1px solid #d5d5d5;
}
.address-btn{
  width: 100%;
  border-bottom: 1px solid #eee;
  margin-top:100rpx;
  margin-bottom:55rpx;
}
.address-btn-impl{
  width:694rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #3e9af7;
  background: -webkit-linear-gradient(top, #3e9af7 0%, #7cc9f9 100%);
  background: linear-gradient(to bottom, #3e9af7 0%, #7cc9f9 100%);
  font-size: 32rpx;
  color: #ffffff;
  border-radius: 0;
}