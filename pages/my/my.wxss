.page-my-top {
  width: 100%;
  height: 325rpx;
  background: url(../../images/my_bg.jpg) no-repeat;
  background-size: 100%;
}
.page-my-top-lf,
.page-my-top-rt {
  margin-top: 40rpx;
  display: inline-block;
  vertical-align: middle;
  color: #fff;
}
.page-my-top-lf {
  padding-left: 28rpx;
  margin-right: 50rpx;
}
.page-my-top-img {
  width: 145rpx;
  height: 145rpx;
  background: #000;
  border-radius: 100%;
}
.page-my-top-name {
  font-size: 30rpx;
  margin-bottom: 20rpx;
  line-height: 1;
}
.page-my-top-phone {
  line-height: 1;
  font-size: 26rpx;
}

.page-my-ct {
  margin-top: 20rpx;
}
.page-my-item {
  padding: 0 30rpx;
  height: 86rpx;
  line-height: 86rpx;
  background: #fff;
  color: #333;
  font-size: 30rpx;
  position: relative;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.page-my-item-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
  margin-top: -5rpx;
  display: inline-block;
  vertical-align: middle;
  font-size: 30rpx;
  background: url(../../images/my_icon.jpg) no-repeat;
  background-size: 100%;
}
.page-my-item-arrow {
  width: 11rpx;
  height: 19rpx;
  background: url(../../images/my_arrow.jpg) no-repeat;
  background-size: 100%;
  position: absolute;
  top: 33rpx;
  right: 30rpx;
}